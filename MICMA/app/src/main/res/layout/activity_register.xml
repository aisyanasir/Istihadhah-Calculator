<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    tools:context="com.example.aisyah.micma.Login.RegisterActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffcc">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="66dp"
        android:foregroundGravity="fill"
        app:srcCompat="@drawable/roses"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="150dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />



    <TextView
        android:text="NEW ACCOUNT"
        android:fontFamily="casual"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView1" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Name"
        android:textColor="#000"
        android:ems="10"
        android:id="@+id/editName"
        android:gravity="center"
        android:layout_above="@+id/editEmail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColor="#000"
        android:ems="10"
        android:id="@+id/editEmail"
        android:gravity="center"
        android:layout_above="@+id/editPassword"
        android:layout_alignStart="@+id/editName" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColor="#000"
        android:ems="10"
        android:id="@+id/editPassword"
        android:gravity="center"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/buttonRegister"
        android:layout_alignStart="@+id/editEmail" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRegister"
        android:text="Register"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="22dp"
        android:background="#ff704d"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muslimah Istihadhah Calculator"
        android:textAlignment="center"
        android:textColor="#ffff4444"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>